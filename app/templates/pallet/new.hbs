<div class="container">
  <div id="newPallet" class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    {{#each colorSet as |color index|}}
    <div class="colorBar">
      {{spectrum-color-picker
          color=color
          preferredFormat="name"
          showPalette=false
          showInput=true
          showButtons=false
          moveFiresChange=true
          clickoutFiresChange=true
          onMove=(action "userChangeColor" index color)
      }}
    </div>
    {{/each}}
  </div>
  <button type="button" class="btn btn-lg center-block btn-primary" {{action "savePallet"}}>
    Save Pallet
  </button>
  <hr/>
</div>
<div>
  {{outlet}}
</div>